<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <% if @user.errors.any? %>
            <%= @user.errors.count %>
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>
          <%= form_with model:@user, local:true do |f| %>
             <label for="user_name">Name</label><br>
             <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
             <label for="user_image">Image</label><br>
             <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
             <label for="user_introduction">Introduction</label><br>
             <%= f.text_area :introduction %><br>
             <%= f.submit "Update User" %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>