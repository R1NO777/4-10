<body>
  <main>
    <div class="container px-5 px-sm-0">
      <div class="row">
      <%= render 'users/users', user:@user, book:@book_new %>
      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |f| %>
          <tr>
             <td>
               <%= link_to user_path(@user.id) do %>
               <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg"%>
               <% end %>
             </td>
             <td><%= link_to f.title, book_path(f.id) %></td>
             <td><%= f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </main>
</body>