<body>
 <main>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <%= render 'users/users', user:@user, book:@book_new %>
      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
       <table class="table">
         <tbody>
           <tr>
             <td><%= link_to user_path(@book.user_id) do %><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg"%><br><%= @user.name %><% end %></td>
             <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
             <td><%= @book.body %></td>
             <% if @book.user_id == current_user.id %>
             <td class="btn btn-sm btn-success edit_book_id"><%= link_to "Edit", edit_book_path(@book.id) %></td>
             <td date-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_id"><%= link_to "Destroy", book_path(@book),method: :delete %></td>
             <% end %>
           </tr>
         </tbody>
       </table>
      </div>
    </div>
   </div>
 </main>
</body>
